{# begin {templatelocation} #}
<div class="forms">
{!if additional}
<span class="alert">
{additional}
</span>
{!endif}
<form id="forms_form{frm_id}" action="{frm_action}" method="post">
{introtext}
{!if error_msg}
<span class="alert">{error_msg}</span>
{!endif}
<input type="hidden" name="frm_id" value="{frm_id}" />
<input type="hidden" name="res_id" value="{res_id}" />
<input type="hidden" name="instance_id" value="{instance_id}" />
{!if success_msg}
<input type="hidden" name="success_msg" value="{success_msg}" />
{!endif}

  <!-- BEGIN QueueRow -->
  <div class="frmrow">
    {!if spancols}
    {!else}
      {!if prompt}
        <label for="{fieldname}">{prompt}:</label>
      {!else}
        &nbsp;
      {!endif}
    {!endif}

    {!if spancols}
      <div class="frmfield left">
    {!else}
      <div class="frmfield">
    {!endif}
    {!if field}
      {field}
      {!if help_msg}
        <i class="{iconset}-question-circle tooltip" title="{help_msg}"></i>
      {!endif}
      {!if is_required}
        <i class="{iconset}-exclamation-triangle form_danger tooltip" title="{safe_prompt} {$LANG_FORMS['is_required']}"></i>
      {!endif}
    {!else}
      &nbsp;
    {!endif}
    </div>
  </div>
  <!-- END QueueRow -->

  {!if captcha}
    <div class="frmfield left">&nbsp;</div>
    <div class="frmfield">{captcha}</div>
  {!endif}
  {hidden_vars}
  <label for="buttons">&nbsp;</label>
  <div class="frmfield">
    <input type="submit" name="{btn_submit}" value="{$LANG_ADMIN['submit']}" {submit_disabled} />
    <input type="reset" name="btnReset" value="{$LANG_FORMS['reset']}" />
    {!if referrer}
      <input type="hidden" name="referrer" value="{referrer}" />
      <input type="reset" name="cancel" value="{$LANG_ADMIN['cancel']}" 
        onclick="javascript:document.location.href='{referrer}';" />
    {!endif}
  </div>
</form>
</div>
<script type="text/javascript">
$("#forms_form{frm_id}").validate();
</script>
{# end {templatelocation} #}
